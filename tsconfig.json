{
  "compilerOptions": {
    "plugins": [
      {
        "name": "tslint-language-service-ts3",
        "ignoreDefinitionFiles": true
      }
    ],
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "target": "es2017",
    "lib": ["es2017"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true
  },
  "include": ["src"]
}
